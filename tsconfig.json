{
  "compilerOptions": {
    "outDir": "./bin",   // Our compiled files will be placed here
    "rootDir": "./src", // Our TypeScript files
    "lib": ["esnext"],
    "target": "es6",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noImplicitAny": false,
    "module": "commonjs",
    "typeRoots": [ "./@types", "./node_modules/@types"]
  },
  "exclude": ["node_modules", "@types"]
}